{
  "version": 8,
  "id": "slflatmap",
  "name": "Second Life flat map",
  "metadata": {
    "mapbox:type": "template"
  },
  "sources": {
    
    "natural_earth_shaded_relief": {
      "maxzoom": 7,
      "minzoom": 0,
      "tileSize": 256,
      "bounds": [0.0,0.0,90.0,90.0],
      "tiles": [
        "https://secondlife-maps-cdn.akamaized.net/map-SLTILENUM({x},{y},{z})-objects.jpg"
      ],
      "type": "raster"
    }
  },
  "sprite": "https://maputnik.github.io/osm-liberty/sprites/osm-liberty",
  "glyphs": "https://maps.tilehosting.com/fonts/{fontstack}/{range}.pbf?key={key}",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "rgb(239,239,239)"
      }
    },
    {
      "id": "natural_earth",
      "type": "raster",
      "source": "natural_earth_shaded_relief",
      "maxzoom": 8,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-opacity": {
          "base": 1.5,
          "stops": [
            [
              0,
              0.6
            ],
            [
              6,
              0.1
            ]
          ]
        }
      }
    }
  ]
}
