{
  "version": 8,
  "id": "slflatmap",
  "name": "Second Life flat map",
  "metadata": {
    "mapbox:type": "template"
  },
  "sources": {
    
    "second_life_map_tiles": {
      "maxzoom": 20,
      "minzoom": 12,
      "tileSize": 256,
      "bounds": [-180.0,-85.0,90.0,90.0],
      "tiles": [
        "https://secondlife-maps-cdn.akamaized.net/map-SLTILENUM({x},{y},{z})-objects.jpg"
      ],
      "type": "raster"
    },
      "second_life_elevation" : {
        "type": "raster-dem",
        "tiles": ["testdata/elev-SLTILENUM({x},{y},{z}).png"],
        "tileSize": 256,
        "maxzoom": 20,
        "minzoom": 12
      }
  },
  "sprite": "https://maputnik.github.io/osm-liberty/sprites/osm-liberty",
  "glyphs": "https://maps.tilehosting.com/fonts/{fontstack}/{range}.pbf?key={key}",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "rgb(239,239,239)"
      }
    },
    {
      "id": "second_life_map",
      "type": "raster",
      "source": "second_life_map_tiles",
      "maxzoom": 20,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-opacity": 1.0
      }
    },
    {
      "id": "second_life_hill_shading",
      "type": "hillshade",
      "source": "second_life_elevation",
      "paint": {
        "hillshade-exaggeration": 0.25
      }
    }
  ]
}
